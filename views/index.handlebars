    function selectStyle(grade) {
        var color = [];
        if(grade < 20) {
            color = [90, 0, 0, 0.8];
        }
        if(grade >= 20 && grade < 40) {
            color = [200, 0, 0, 0.8];
        }
        if(grade >= 40 && grade < 60) {
            color = [200, 200, 0, 0.8];
        }
        if(grade >= 60 && grade < 80) {
            color = [100, 200, 0, 0.8];
        }
        if( grade >= 80) {
            color = [0, 250, 0, 0.8];
        }
        console.log("color: " + color);
        return new ol.style.Style({
            stroke: new ol.style.Stroke({
                width: 6,
                color: color
            })
        });

    }

    function rateRoute(routes, stations) {
        var distances = new Array(stations.length);
        for(s = 0; s < stations.length;s++){
            distances[s] = 100000;
            var nearest_p_idx = 0;
            for(p = 0;p < routes.length - 1; p+=2){
                var lat = routes[p];
                var lon = routes[p+1];
                var stat = stations[s];
                var dist = Math.sqrt(Math.pow(stat["lat"]-lat,2)+Math.pow(stat["lon"]-lon,2));
                if(dist < distances[s]){
                    distances[s] = dist;
                    nearest_p_idx = p;
                }
            }
        }
        sum = 0.0;
        sumWeights = 0.0;
        for(s = 0; s < stations.length;s++){
            if(!isNaN(parseInt(stations[s]["aqi"]))) {
                sum += parseInt(stations[s]["aqi"]) * distances[s];
                sumWeights += distances[s];
            }
        }
        return sum / sumWeights;
    }

